# FilersKeepers Configuration

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=filers_keepers
MONGODB_COLLECTION=books

# Crawler Configuration
BASE_URL=https://books.toscrape.com
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0
RATE_LIMIT_PER_SECOND=2.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/crawler.log

# Crawl State Management
STATE_FILE=crawl_state.json
RESUME_ON_FAILURE=true

# Development/Testing
DEBUG=true
TEST_MODE=false

# Scheduler Configuration
SCHEDULE_HOUR=2
SCHEDULE_MINUTE=0
TIMEZONE=UTC
ENABLE_CHANGE_DETECTION=true
ENABLE_NEW_BOOK_DETECTION=true
ENABLE_REMOVED_BOOK_DETECTION=true
MAX_CONCURRENT_BOOKS=50
BATCH_SIZE=100
REQUEST_TIMEOUT=30
ENABLE_CONTENT_FINGERPRINTING=true
FINGERPRINT_FIELDS=name,description,category,price_including_tax,availability,rating,number_of_reviews
GENERATE_DAILY_REPORTS=true
REPORT_FORMAT=json
REPORT_RETENTION_DAYS=30

# Alerting Configuration
ALERTING_ENABLED=true
LOG_ENABLED=true
MIN_SEVERITY_FOR_LOG=low
MAX_ALERTS_PER_HOUR=10
ALERT_COOLDOWN_MINUTES=30

# API Configuration
