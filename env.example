# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=filers_keepers
MONGODB_COLLECTION=books

# Crawler Configuration
BASE_URL=https://books.toscrape.com
RATE_LIMIT=10
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/crawler.log
DEBUG=false

# State Management
CRAWL_STATE_FILE=crawl_state.json
RESUME_ON_FAILURE=true

# Part 2: Scheduler Configuration
# Scheduling
SCHEDULE_HOUR=2
SCHEDULE_MINUTE=0
TIMEZONE=UTC

# Change Detection
ENABLE_CHANGE_DETECTION=true
ENABLE_NEW_BOOK_DETECTION=true
ENABLE_REMOVED_BOOK_DETECTION=true
MAX_CONCURRENT_BOOKS=50
BATCH_SIZE=100

# Content Fingerprinting
ENABLE_CONTENT_FINGERPRINTING=true
FINGERPRINT_FIELDS=name,description,category,price_including_tax,availability,rating,number_of_reviews

# Reporting
GENERATE_DAILY_REPORTS=true
REPORT_FORMAT=json
REPORT_RETENTION_DAYS=30

# Alerting Configuration
ALERTING_ENABLED=true
EMAIL_ENABLED=false
LOG_ENABLED=true

# Email Configuration (if EMAIL_ENABLED=true)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com
TO_EMAILS=admin@example.com,monitor@example.com

# Alert Thresholds
MIN_SEVERITY_FOR_EMAIL=medium
MIN_SEVERITY_FOR_LOG=low
MAX_ALERTS_PER_HOUR=10
ALERT_COOLDOWN_MINUTES=30